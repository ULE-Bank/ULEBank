<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<!-- Mapeado a modo de prueba, para que no aparezca /index...html si no 
		/incio -->
	<servlet>
		<servlet-name>inicio</servlet-name>
		<jsp-file>/index.jsp</jsp-file>
	</servlet>

	<servlet>
		<servlet-name>FrontalController</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/spring/app-config.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>FrontalController</servlet-name>
		<url-pattern>/*.htm</url-pattern>
		<url-pattern>/incrementarPrecio</url-pattern>
		<url-pattern>/inicio</url-pattern>
		<url-pattern>/usuarios</url-pattern>
		<url-pattern>/apr</url-pattern>
		<url-pattern>/leasing</url-pattern>
		<url-pattern>/offersconsulting</url-pattern>
		<url-pattern>/loans</url-pattern>
		<url-pattern>/discounts</url-pattern>
		<url-pattern>/reversemortgage</url-pattern>
		<url-pattern>/creditaccount</url-pattern>
		<url-pattern>/cookies</url-pattern>
		<url-pattern>/contact</url-pattern>
		<url-pattern>/frenchloan</url-pattern>
		<url-pattern>/italianloan</url-pattern>
		<url-pattern>/germanloan</url-pattern>
		<url-pattern>/americanloan</url-pattern>
		
	</servlet-mapping>

	<servlet>
		<servlet-name>HelloAppEngine</servlet-name>
		<servlet-class>es.unileon.ulebankoffice.web.HelloAppEngine</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>HelloAppEngine</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>


	<welcome-file-list>
		<welcome-file>inicio</welcome-file>
	</welcome-file-list>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

<!-- SoluciÃ³n para los caracteres UTF-8. Funciona :) -->

	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<page-encoding>UTF-8</page-encoding>
		</jsp-property-group>
	</jsp-config>

</web-app>
